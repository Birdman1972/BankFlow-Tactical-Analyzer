{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BankFlow-Tactical-Analyzer",
  "version": "0.3.5",
  "identifier": "com.bankflow.tactical-analyzer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "BankFlow 金流分析器",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "app", "dmg", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright © 2026 Project BoB",
    "shortDescription": "Digital forensics fund flow analysis tool",
    "longDescription": "BankFlow 金流分析器 is a specialized tool for correlating bank transaction logs with IP access logs to identify suspicious activities.",
    "resources": [],
    "fileAssociations": [
      {
        "ext": ["xlsx", "xls"],
        "name": "Excel Document",
        "description": "Transaction or Log File",
        "role": "Viewer"
      }
    ],
    "windows": {
      "wix": {
        "language": "zh-TW"
      }
    }
  },
  "plugins": {
    "dialog": {},
    "fs": {
      "scope": ["$HOME/**", "$DOCUMENT/**", "$DOWNLOAD/**"]
    }
  }
}
